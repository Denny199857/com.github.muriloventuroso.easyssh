{
    "app-id": "com.github.muriloventuroso.easyssh",
    "base": "io.elementary.Loki.BaseApp",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "command": "com.github.muriloventuroso.easyssh",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro"
    ],
    "build-options": {
        "cflags": "-O2",
        "cxxflags": "-O2"
    },

    "modules": [
        {
            "name": "openssh",
            "config-opts": ["--without-pie"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://cloudflare.cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-7.6p1.tar.gz",
                    "sha256": "a323caeeddfe145baaa0db16e98d784b1fbc7dd436a6bf1f479dfd5cd1d21723"
                }
            ]
        },
        {
            "name": "libvte",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.acc.umu.se/pub/gnome/sources/vte/0.52/vte-0.52.2.tar.xz",
                    "sha256": "0f2657cef52accbfe56feede553155552d7c1984b1291838af3cb8cfc19b26af"
                }
            ]
        },
        {
            "name": "easyssh",
            "buildsystem": "meson",
            "config-opts": ["-Dlibunity=false"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/muriloventuroso/easyssh/archive/1.3.0.tar.gz",
                    "sha256": "7a20b59f3e9072084dfd6da494bf5c539321aa8de0526cb9143f2bb64fe31f96"
                }
            ],
             "post-install": [
                 "glib-compile-schemas /app/share/glib-2.0/schemas/"
             ]
        }
    ]
}
