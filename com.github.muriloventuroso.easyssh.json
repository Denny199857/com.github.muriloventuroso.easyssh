{
    "app-id": "com.github.muriloventuroso.easyssh",
    "runtime": "org.gnome.Platform",
    "runtime-version" : "3.34",
    "base" : "io.elementary.BaseApp",
    "base-version" : "juno",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.muriloventuroso.easyssh",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--socket=wayland",
        "--socket=ssh-auth",
        "--filesystem=home",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro"
    ],
    "modules": [
        {
            "name": "easyssh",
            "buildsystem": "meson",
            "config-opts": ["-Dlibunity=false", "-Dubuntu-bionic-patched-vte=false"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/muriloventuroso/easyssh/archive/1.6.3.tar.gz",
                    "sha256": "fe54fd76af63424437c3c2515330fa9248949738ad6ecfe3b84a7ad55d863897"
                }
            ],
             "post-install": [
                 "glib-compile-schemas /app/share/glib-2.0/schemas/"
             ]
        }
    ]
}

